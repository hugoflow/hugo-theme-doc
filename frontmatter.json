{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.content.pageFolders": [
    {
      "path": "[[workspace]]/content",
      "title": "content"
    },
    {
      "path": "[[workspace]]/content/blog",
      "title": "blog"
    },
    {
      "path": "[[workspace]]/content/docs",
      "title": "docs"
    },
    {
      "title": "showcase",
      "path": "[[workspace]]/content/showcase"
    }
  ],
  "frontMatter.content.publicFolder": "static",
  "frontMatter.framework.id": "hugo",
  "frontMatter.git.enabled": true,
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "cascade_group",
      "fields": [
        {
          "title": "type",
          "name": "type",
          "type": "string"
        },
        {
          "title": "show_breadcrumb",
          "name": "show_breadcrumb",
          "type": "boolean"
        },
        {
          "title": "show_toc",
          "name": "show_toc",
          "type": "boolean"
        }
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "linkTitle",
          "name": "linkTitle",
          "type": "string"
        },
        {
          "title": "type",
          "name": "type",
          "type": "string"
        },
        {
          "title": "cascade",
          "name": "cascade",
          "type": "block",
          "fieldGroup": [
            "cascade_group"
          ]
        }
      ]
    }
  ]
}